<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufrn.eaj.tads.meuslivros.PrincipalActivity"
    android:id="@+id/layout"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="70dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/book" />

        <TextView
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Livraria do fabinho"
            android:textSize="18dp"
            android:textAllCaps="true"
            android:textStyle="italic"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar Novo"
        android:onClick="cadastrar" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista Livros"
        android:onClick="listar"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AutoComplete Livros"
        android:onClick="autoComplete" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ListView Livros"
        android:onClick="listView"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RecyclerView"
        android:onClick="recycler"
        />
</LinearLayout>
